{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",           // âœ… THIS IS REQUIRED
    "baseUrl": "./src",           // optional, if you're using "@/"
    "paths": {
      "@/*": ["*"]                // optional, if you're using "@/components/*"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
